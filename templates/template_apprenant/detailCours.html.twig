{% extends 'base_apprenant.html.twig' %}



{% block username %} {{user.Nom}} {% endblock username %}
{% block contenu %}


<div class="container">
<div class="page-title-container">
<div class="row">
<div class="col-12 col-sm-6">
<h1 class="mb-0 pb-0 display-4" id="title">{{ cour.titre }}</h1>
<nav class="breadcrumb-container d-inline-block" aria-label="breadcrumb">
<ul class="breadcrumb pt-0">
<li class="breadcrumb-item"><a href="{{url('app_template_apprenant')}}">Home</a></li>
<li class="breadcrumb-item"><a href="{{url('app_liste_cours')}}">Cours</a></li>
</ul>
</nav>
</div>
</div>
</div>
<div class="row">
<div class="col-12 col-xxl-8 mb-5">
<div class="card mb-5">
<div class="card-img-top">
<img src="https://www.icbc.com/partners/PublishingImages/header-driver-training.png" class="card-img-top sh-25" alt="card image">
</div>
<div class="card-body">
<h6></h6>
<p class="mb-4">
{{cour.contenuCours}}
</p>
</div>
<div class="card-footer border-0 pt-0">
<div class="row align-items-center">
<div class="col-6">
<div class="d-flex align-items-center">
<div class="sw-5 d-inline-block position-relative me-3">
<a href="{{url('app_question_cours',{'id':cour.id})}}" class="btn btn-primary btn-icon btn-icon-start w-100 w-sm-auto">
<span>Essayer le questionnaire :)</span>
</a>
</div>
</div>
</div>
<div class="col-6 text-muted">
<div class="row g-0 justify-content-end">
</div>
</div>
</div>
</div>
</div>


