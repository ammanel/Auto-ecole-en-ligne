{% extends 'base_responsable_auto_ecole.html.twig' %}

{% block title %}Session index{% endblock %}

{% block contenu %}



<section class="content">

    <div class="row">

      <div class="col-12">
				<div class="box">
					<div class="box-header">
						<h4 class="box-title align-items-start flex-column">
							Vos sessions
							<small class="subtitle">plannifieer vos sessions</small>
						</h4>
					</div>
					<div class="box-body">
						<div class="table-responsive">
							<table class="table no-border">
								<thead>
									<tr class="text-uppercase bg-lightest">
										
									</tr>
								</thead>
								<tbody>
                                        {% for session in sessions %}
									<tr>	
									 {% if session.enable == false %}									
										<td class="pl-0 py-8">
											<div class="d-flex align-items-center">
												<div class="flex-shrink-0 mr-20">
													<div class="bg-img h-50 w-50" style="background-image: url(../images/gallery/creative/img-1.jpg)"></div>
												</div>

												<div>
													<a href="#" class="text-dark font-weight-600 hover-primary mb-1 font-size-16">{{session.nom}}</a>
													<span class="text-fade d-block">(session normal)</span>
												</div>
											</div>
										</td>
										<td>
											<span class="text-fade font-weight-600 d-block font-size-16">
												Debut
											</span>
											<span class="text-dark font-weight-600 d-block font-size-16">
												{{ session.dateDebut ? session.dateDebut|date('Y-m-d') : '' }}
											</span>
										</td>
										<td>
											<span class="text-fade font-weight-600 d-block font-size-16">
												Fin
											</span>
											<span class="text-dark font-weight-600 d-block font-size-16">
												{{ session.dateFin ? session.dateFin|date('Y-m-d') : '' }}
											</span>
										</td>
										
										<td>
											<a href="{{url('app_horaire_new_pratique',{'id':session.id})}}"><span class="glyphicon glyphicon-plus"></span><span class="badge badge-primary-light badge-lg">Planning pratique</span></a>
										</td>
                                        <td>
											<a href="{{url('app_horaire_new_theorique',{'id':session.id})}}"><span class="glyphicon glyphicon-plus"></span><span class="badge badge-primary-light badge-lg">Planning th√©orique</span></a>
										</td>
										 <td>
											<a href="{{url('app_planning',{'id':session.id})}}"><span class="glyphicon glyphicon-eye-open"></span></a>
										</td>
										{% endif %}
									</tr>
									    {% endfor %}
									
									
								</tbody>
							</table>
						</div>
					</div>
				</div>  
			</div>

         
    
    </div>

</section>

   
{% endblock %}
