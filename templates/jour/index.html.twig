{% extends 'base.html.twig' %}

{% block title %}Jour index{% endblock %}

{% block contenu %}
    <h1>Jour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jour</th>
                <th>Enable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jour in jours %}
            <tr>
             {% if jour.enable == false %}
                <td>{{ jour.id }}</td>
                <td>{{ jour.jour }}</td>
                <td>{{ jour.enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_jour_show', {'id': jour.id}) }}">show</a>
                    <a href="{{ path('app_jour_edit', {'id': jour.id}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_jour_new') }}">Create new</a>
{% endblock %}
