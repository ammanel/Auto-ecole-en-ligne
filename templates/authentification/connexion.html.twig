{% extends 'base_connexion.html.twig' %}

{% block contenu %}


<section class="Login-wrap ptb-100">
<div class="container">
<div class="row">
<div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-md-10 offset-md-1">
<div class="login-form-wrap">
<div class="login-header">
<h3>Connecter vous ICI</h3>
{% if error %}
        <div class="alert alert-primary" role="alert">Authentification Echouée</div>
{% endif %}
</div>
<div class="login-form">
<div class="login-body">
<form class="form-wrap" action="#" method="post">
<div class="row">
<div class="col-lg-12">
<div class="form-group">
<input  value="{{LastUsername}}" placeholder="Telephone" name="_username">
</div>
</div>
<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
<div class="col-lg-12">
<div class="form-group">
<input  name="_password" type="password" placeholder="Mot de passe">
</div>

</div>
<div class="col-lg-6 col-md-6 col-sm-6 col-6">
<div class="checkbox style3">
<input type="checkbox" id="test_1">
</div>
</div>
<div class="col-lg-6 col-md-6 col-sm-6 col-6 text-end mb-20">
<a href="#" class="link style1">Mot de passe oublier?</a>
</div>
<div class="col-lg-12">
<div class="form-group">
 <button class="btn style1">
Connexion
</button>
</div>
</div>
<div class="col-md-12 text-center">
<p class="mb-0">vous n'avez pas de compte? <a class="link style1" href="{{url('app_inscription')}}">Créer en un</a></p>
</div>
</div>
</form>
</div>
</div>
</div>
</div>
</div>
</div>
</section>

    
{% endblock %}