{% extends 'base_site_web.html.twig' %}

{% block title %}Blog{% endblock %}

{% block contenu %}

<div class="content-wrapper">

<div class="breadcrumb-wrap bg-f br-3">
<div class="overlay op-8 bg-downriver"></div>
<div class="container">
<div class="breadcrumb-title">
<h2>Blog</h2>
<ul class="breadcrumb-menu list-style">
<li><a href="{{url('app_website')}}">Home </a></li>
<li>Blog</li>
</ul>
</div>
</div>
</div>


<div class="blog-details-wrap ptb-100">
<div class="container">
<div class="row justify-content-center">
{% for post in posts %}
<div class="col-xl-4 col-lg-6 col-md-6">
<div class="blog-card style1">
<div class="blog-img">
<img src="{{asset('Post/' ~ post.image)}}" alt="Image">
<p class="blog-date">New</p>
</div>
<div class="blog-info">
<ul class="blog-metainfo  list-style">
<li><i class="flaticon-user-1"></i> <a href="posts-by-author.html">Admin</a></li>
<li><i class="flaticon-chat-comment-oval-speech-bubble-with-text-lines"></i>0 Comment</li>
</ul>
<h3><a href="#">{{post.titre}}</a></h3>
<p>{{post.contenu|slice(0,50)}}...</p>
<a href="{{ path('app_blog_detail', {'id': post.id}) }}" class="link style1">Lire plus
<i class="flaticon-right-arrow"></i>
</a>
</div>
</div>
</div>
{% endfor %}
<div class="page-navigation mt-10">

</div>
</div>
</div>
</div>

{% endblock %}
