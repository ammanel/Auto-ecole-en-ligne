                                    <div class="card-header">

                                        {% for messages in app.flashes('info') %}
                                        <div class="alert alert-success">
                                            {{messages}}
                                        </div>
                                        {% endfor %}
                                        
                                    </div>
                                    <div class="card-body">
                                        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                                            <thead>
                                            <tr>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Sex</th>
                                                <th>Téléphone</th>
                                                <th>Addresse</th>
                                                <th>Mail</th>
                                                <th>Actions</th>
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                            {% for apprenant in apprenants %}
                                                <tr>
                                                <td>{{ apprenant.Nom }}</td>
                                                <td>{{ apprenant.Prenom }}</td>
                                                <td>{{ apprenant.Sex}}</td>
                                                <td>{{ apprenant.Telephone }}</td>
                                                <td>{{ apprenant.Addresse }}</td>
                                                <td>{{ apprenant.Mail }}</td>
                                                <td>
                                                    
                                                    <a href="{{url('supp_apprenant',{'id':apprenant.id})}}" onclick="return confirm('Voulez vraiment Supprimer cet admin cette action est iréversible?')">effacer</a>
                                                    <a href="{{url('val_cour_apprenant',{'id':apprenant.id})}}" onclick="return confirm('Permettre a cet apprenant d'acceder aux differants cours de la plateforme?')">Activer cour</a>
                                                </td>
                                            </tr>
                                            
                                        {% else %}
                                            <tr>
                                                <td colspan="5">pas de donnée trouver</td>
                                            </tr>
                                        {% endfor %}
                                            
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- end cardaa -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </div> <!-- container-fluid -->
                </div>
