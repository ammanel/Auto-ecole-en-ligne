{% extends 'base.html.twig' %}

{% block title %}Proposition liste{% endblock %}

{% block contenu %}

       <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">DataTables</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                            <li class="breadcrumb-item active">DataTables</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

        
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        
                                    </div>
                                    <div class="card-body">
                                        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Suggestion</th>
                                                <th>Actions</th>
                                                
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                            <tr>
                                            {% for proposition in propositions %}
                                                {% if proposition.enable == false %}
                                                <td>{{ loop.index }}</td>
                                               <td>{{ proposition.suggestion }}</td>
                                                <td>
                                                    <a href="{{ path('app_proposition_delete', {'id': proposition.id}) }}" onclick="return confirm('Voulez vraiment Supprimer cette réponse?')">delete</a>
                                                      <a href="{{ path('app_proposition_edit', {'id': proposition.id}) }}">update</a>
                                                </td>
                                                
                                            </tr>
                                             {% endif %} 
                                             {% else %}
                                            <tr>
                                                <td colspan="4">Pas de donnée trouver</td>
                                            </tr>
                                             {% endfor %}
                                            
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- end cardaa -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                  <a href="{{ path('app_proposition_new') }}">Ajouter une proposition de réponse</a>
            


