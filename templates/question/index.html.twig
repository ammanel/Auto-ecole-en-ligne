{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block contenu %}


       <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">DataTables</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                            <li class="breadcrumb-item active">DataTables</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

        
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Buttons example</h4>
                                        <p class="card-title-desc">The Buttons extension for DataTables
                                            provides a common set of options, API methods and styling to display
                                            buttons on a page that will interact with a DataTable. The core library
                                            provides the based framework upon which plug-ins can built.
                                        </p>
                                    </div>
                                    <div class="card-body">
                                        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Intitule</th>
                                                <th>Reponse</th>
                                                <th>Actions</th>
                                                
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                            <tr>
                                            {% for question in questions %}
                                                {% if question.enable == false %}
                                                <td>{{ loop.index }}</td>
                                                <td>{{ question.intitule }}</td>
                                                {% for question in question.reponse %}
                                                <td>{{ question.suggestion}}</td>
                                                    {% endfor %}
                                                <td>
                                                    <a href="{{ path('app_question_delete', {'id': question.id}) }}">delete</a>
                                                                <a href="{{ path('app_question_edit', {'id': question.id}) }}">update</a>
                                                </td>
                                                
                                            </tr>
                                             {% endif %} 
                                             {% else %}
                                            <tr>
                                                <td colspan="4">Pas de donn√©e trouver</td>
                                            </tr>
                                             {% endfor %}
                                            
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- end cardaa -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                <a href="{{ path('app_question_new') }}">Ajouter une question</a>
            


