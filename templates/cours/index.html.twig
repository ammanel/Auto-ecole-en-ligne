{% extends 'base.html.twig' %}

{% block title %}Cours liste {% endblock %}

{% block contenu %}

       <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">DataTables</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                            <li class="breadcrumb-item active">DataTables</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

        
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        
                                    </div>
                                    <div class="card-body">
                                        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                                            <thead>
                                            <tr>
                                                <th>id</th>
                                                <th data-priority="1">Titre </th>
                                                <th data-priority="3">Contenu Cours</th>
                                                <th data-priority="1">Actions</th>
                                                           
                                                
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                                 {% for cour in cours %}
                                                        {% if cour.enable == false %}
                                                        <tr>
                                                            <th>{{ loop.index }} </th>
                                                            <td>{{ cour.titre }}</td>
                                                            <td>{{ cour.contenuCours|slice(0, 100) }}</td>
                                                            <td>
                                                                 <a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
                                                                 <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
                                                                 <a href="{{ path('app_cours_delete', {'id': cour.id}) }}" onclick="return confirm('Voulez vraiment supprimer ce cours?')">effacer</a>
                                                            </td>
                                                       
                                                        </tr>
                                                        {% endif %} 
                                                         {% else %}
                                                                <tr>
                                                                    <td colspan="4">Pas de donn√©e trouver</td>
                                                                </tr>
                                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- end cardaa -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                 <a href="{{ path('app_cours_new') }}">Ajouter un Cours</a>
            


