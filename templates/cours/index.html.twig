                                                            <th data-priority="1">Actions</th>
                                                           
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for cour in cours %}
                                                        {% if cour.enable == false %}
                                                        <tr>
                                                            <th>{{ loop.index }} </th>
                                                            <td>{{ cour.titre }}</td>
                                                            <td>{{ cour.contenuCours|slice(0, 100) }}</td>
                                                            <td>
                                                                 <a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
                                                                 <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
                                                                 <a href="{{ path('app_cours_delete', {'id': cour.id}) }}">effacer</a>
                                                            </td>
                                                       
                                                        </tr>
                                                        {% endif %} 
                                                         {% else %}
                                                                <tr>
                                                                    <td colspan="4">Pas de donn√©e trouver</td>
                                                                </tr>
                                                            {% endfor %}
                                                        
                                                    </tbody>
                                                </table>
                                            </div>
        
                                        </div>
        
                                    </div>
                                </div>
                                <!-- end card -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                        
                    </div> <!-- container-fluid -->
                </div>
